{
	"manifest_version": 3,
	"name": "Nuke JS",
	"description": "Does a website bomb you with ads and popups? You are in control. Nuke 'em back.",
	"version": "0.0.1",
	"browser_specific_settings": {
		"gecko": {"id": "vrugtehagel/nuke-js"}
	},
	"developer": {
		"name": "vrugtehagel",
		"url": "https://github.com/vrugtehagel/nuke-js"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"browsingData"
	],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_title": "Nuke it!",
		"default_area": "navbar",
		"default_icon": {
			"48": "icon.svg"
		}
	},
	"icons": {
		"48": "icon.svg"
	}
}
